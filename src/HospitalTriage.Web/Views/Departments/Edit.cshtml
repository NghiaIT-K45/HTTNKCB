@model HospitalTriage.Web.ViewModels.Departments.DepartmentEditVm
@{
    ViewData["Title"] = "Sửa khoa";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-1">Sửa khoa</h2>
        <div class="text-muted small">Cập nhật thông tin khoa khám</div>
    </div>
    <a class="btn btn-outline-secondary" asp-action="Index">Quay lại</a>
</div>

<div class="card border-0 shadow-sm rounded-4">
    <div class="card-body p-4">
        <form asp-action="Edit" method="post" class="row g-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-md-4">
                <label asp-for="Code" class="form-label">Mã khoa</label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="col-md-8">
                <label asp-for="Name" class="form-label">Tên khoa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="col-12">
                <div class="d-flex flex-column gap-2">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label asp-for="IsActive" class="form-check-label">Đang hoạt động</label>
                    </div>

                    <div class="form-check">
                        <input asp-for="IsGeneral" class="form-check-input" />
                        <label asp-for="IsGeneral" class="form-check-label">Khoa Tổng quát (fallback)</label>
                        <div class="text-muted small mt-1">Dùng khi không match rule phân luồng.</div>
                    </div>
                </div>
            </div>

            <div class="col-12 d-flex gap-2 mt-2">
                <button class="btn btn-primary" type="submit">Lưu</button>
                <a class="btn btn-outline-secondary" asp-action="Index">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
