@model HospitalTriage.Web.ViewModels.Doctors.DoctorEditVm
@{
    ViewData["Title"] = "Sửa bác sĩ";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-1">Sửa bác sĩ</h2>
        <div class="text-muted small">Cập nhật thông tin bác sĩ</div>
    </div>
    <a class="btn btn-outline-secondary" asp-action="Index">Quay lại</a>
</div>

<div class="card border-0 shadow-sm rounded-4">
    <div class="card-body p-4">
        <form asp-action="Edit" method="post" class="row g-3">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-md-4">
                <label asp-for="Code" class="form-label">Mã bác sĩ</label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>

            <div class="col-md-8">
                <label asp-for="FullName" class="form-label">Họ và tên</label>
                <input asp-for="FullName" class="form-control" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="col-md-8">
                <label asp-for="DepartmentId" class="form-label">Khoa</label>
                <select asp-for="DepartmentId" class="form-select" asp-items="Model.Departments">
                    <option value="">-- Chọn khoa --</option>
                </select>
                <span asp-validation-for="DepartmentId" class="text-danger"></span>
            </div>

            <div class="col-md-4 d-flex align-items-end">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" />
                    <label asp-for="IsActive" class="form-check-label">Đang hoạt động</label>
                </div>
            </div>

            <div class="col-12 d-flex gap-2 mt-2">
                <button class="btn btn-primary" type="submit">Lưu</button>
                <a class="btn btn-outline-secondary" asp-action="Index">Hủy</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
