@model HospitalTriage.Web.ViewModels.Doctors.DoctorIndexVm
@{
    ViewData["Title"] = "Bác sĩ";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2 mb-3">
    <div>
        <h2 class="mb-1">Bác sĩ</h2>
        <div class="text-muted small">Quản lý danh sách bác sĩ</div>
    </div>
    <a class="btn btn-primary" asp-action="Create">Tạo mới</a>
</div>

<div class="card border-0 shadow-sm rounded-4 mb-3">
    <div class="card-body">
        <form class="row g-2 align-items-end" method="get">
            <div class="col-12 col-md-5">
                <label class="form-label mb-1">Tìm kiếm</label>
                <input name="search" value="@Model.Search" class="form-control" placeholder="Tìm theo mã hoặc họ tên" />
            </div>

            <div class="col-12 col-md-5">
                <label class="form-label mb-1">Khoa</label>
                <select name="departmentId" class="form-select">
                    <option value="">-- Tất cả khoa --</option>
                    @foreach (var d in Model.Departments)
                    {
                        <option value="@d.Value" selected="@d.Selected">@d.Text</option>
                    }
                </select>
            </div>

            <div class="col-6 col-md-1">
                <button class="btn btn-outline-primary w-100" type="submit">Tìm</button>
            </div>

            <div class="col-6 col-md-1">
                <a class="btn btn-outline-secondary w-100" asp-action="Index">Xóa</a>
            </div>
        </form>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-4">
    <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th style="width:80px;">Id</th>
                    <th style="width:140px;">Mã</th>
                    <th>Họ tên</th>
                    <th style="width:220px;">Khoa</th>
                    <th style="width:120px;">Trạng thái</th>
                    <th style="width:220px;">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Items is null || Model.Items.Count == 0)
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-5">Không có dữ liệu.</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td class="fw-semibold">@item.Code</td>
                            <td>@item.FullName</td>
                            <td class="text-muted">@item.DepartmentName</td>
                            <td>
                                @if (item.IsActive)
                                {
                                    <span class="badge text-bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge text-bg-secondary">Inactive</span>
                                }
                            </td>
                            <td class="d-flex flex-wrap gap-2">
                                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Sửa</a>

                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-sm btn-outline-danger"
                                            onclick="return confirm('Vô hiệu hóa bác sĩ này?');">
                                        Vô hiệu hóa
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
