@model HospitalTriage.Web.ViewModels.Triage.TriageWaitingListVm
@using HospitalTriage.Domain.Enums
@{
    ViewData["Title"] = "Phân luồng";
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2 mb-3">
    <div>
        <h2 class="mb-1">Phân luồng</h2>
        <div class="text-muted small">Danh sách lượt khám đang chờ phân luồng theo ngày</div>
    </div>
</div>

<div class="card border-0 shadow-sm rounded-4 mb-3">
    <div class="card-body p-4">
        <form method="get" class="row g-2 align-items-end">
            <div class="col-12 col-md-4">
                <label class="form-label mb-1">Ngày</label>
                <input type="date" name="date" class="form-control"
                       value="@Model.Date.ToString("yyyy-MM-dd")" />
            </div>
            <div class="col-12 col-md-auto">
                <button class="btn btn-primary">Lọc</button>
                <a class="btn btn-outline-secondary ms-1" asp-action="Index">Hôm nay</a>
            </div>
        </form>
    </div>
</div>

@if (Model.Items is null || Model.Items.Count == 0)
{
    <div class="alert alert-info border-0 shadow-sm rounded-4">
        Không có lượt khám nào đang chờ phân luồng.
    </div>
}
else
{
    <div class="card border-0 shadow-sm rounded-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th style="width:120px;">STT</th>
                        <th>Bệnh nhân</th>
                        <th style="width:180px;">Trạng thái</th>
                        <th style="width:160px;" class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var x in Model.Items)
                    {
                        <tr>
                            <td>
                                <span class="badge text-bg-primary rounded-pill px-3 py-2">@x.QueueNumber</span>
                            </td>
                            <td class="fw-semibold">@x.PatientName</td>
                            <td>
                                <span class="badge text-bg-secondary">@x.CurrentStatus</span>
                            </td>
                            <td class="text-end">
                                <a class="btn btn-sm btn-success"
                                   asp-controller="Triage"
                                   asp-action="Process"
                                   asp-route-id="@x.VisitId">
                                    Phân luồng
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
