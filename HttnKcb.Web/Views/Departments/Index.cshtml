@model List<HttnKcb.Web.ViewModels.DepartmentViewModel>

@{
    ViewData["Title"] = "Departments";
}

<h2>@ViewData["Title"]</h2>

<form method="get" class="mb-3">
    <input type="text" name="keyword" value="@ViewBag.Keyword" placeholder="Search by code or name" />
    <button type="submit" class="btn btn-primary btn-sm">Search</button>
    <a asp-action="Create" class="btn btn-success btn-sm">+ New Department</a>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>@(item.IsActive ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
